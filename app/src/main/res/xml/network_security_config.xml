<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow HTTP traffic for development server -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow localhost and 0.0.0.0 for development -->
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">192.168.100.110</domain>
        <domain includeSubdomains="false">127.0.0.1</domain>
        <domain includeSubdomains="false">0.0.0.0</domain>
        <domain includeSubdomains="false">10.0.2.2</domain> <!-- Android emulator host -->
    </domain-config>

    <!-- For production, you might want to restrict to specific domains -->
    <!--
      <domain-config cleartextTrafficPermitted="false">
          <domain includeSubdomains="true">your-production-domain.com</domain>
      </domain-config>
      -->
</network-security-config>